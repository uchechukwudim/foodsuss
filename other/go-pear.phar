// {{{ mkdir_p()

function mkdir_p($dir, $mode = 0777)
{
    if (@is_dir($dir)) {
        return true;
    }

    $parent = dirname($dir);
    $ok = true;
    if (!@is_dir($parent) &amp;&amp; $parent != $dir) {
        $ok = mkdir_p(dirname($dir), $mode);
    }
    if ($ok) {
        $ok = @mkdir($dir, $mode);
        // This is handled in the caller function (eg. webfrontend or not)
        //if (!$ok) {
        //    print "mkdir failed: &lt;$dir&gt;\n";
        //}
    }
    return $ok;
}

