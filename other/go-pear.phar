$local_dir = array();
if (file_exists($gopear_bundle_dir) || is_dir($gopear_bundle_dir)) {
    $dh = @opendir($gopear_bundle_dir);

    while($file = @readdir($dh)) {
        if ($file == '.' || $file == '..' || !is_file($gopear_bundle_dir.'/'.$file)) {
            continue;
        }
        $_pos = strpos($file, '-');
        if ($_pos === false) {
          $local_dir[$file] = $file;
        } else {
          $local_dir[substr($file, 0, $_pos)] = $file;
        }
    }
    closedir($dh);
    unset($dh, $file, $_pos);
}

